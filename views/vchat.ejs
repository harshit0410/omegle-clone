<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script src="/socket.io/socket.io.js" defer ></script>
  <script src="vscript.js" defer></script>
  <title>Document</title>
  <style>
    #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 400px);
      grid-auto-rows: 300px;
    }
    video {
      width: 100%;
      height: 90%;
      object-fit: cover;
      transform: rotateY(180deg);
    }
    #chat-grid {
      display: flex;
      flex-direction: column;
    }
    #message-container {
      display: block;
    }
    #chat-container {
      display: flex;
      flex-direction: row;
    }
  </style>
</head>
<body>
  <div id="video-grid">
    <div>
      local
      <video id="local" autoplay= 'true'/>
    </div>
    <div>
    remote
    <video id ='remote' autoplay='false' />
    </div>
  </div>
  <div id ="chat-grid">
    <div id ="message-container">

    </div>
    <div id = "chat-container">
      <div id="message-box">
        <input  id ="abcd" type="text" placeholder="Enter a message">
      </div>
      <div id ="send-button">
        <button id ="pqrs">Send</button>
      </div>
    </div>
  </div>
  <div id="'connect">
    <button id="connect-to-random-user">
      Connect
    </button>
    <button id="disconnect-to-random-user">
      DisConnect
    </button>
  </div>
</body>
</html>